@model eManager.Domain.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@Html.ActionLink("Create Employee", "add", "Employee", new { departmentId = @Model.Id}, null )

<table>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach(var r in Model.Employees)
    {
        <tr>
            <td>@r.Name</td>
            <td></td>
        </tr>
    }
</table>
